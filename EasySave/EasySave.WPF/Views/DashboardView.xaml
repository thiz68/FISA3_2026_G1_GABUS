<UserControl x:Class="EasySave.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <StackPanel>

            <!-- Dashboard Title and Server Status -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding DashboardTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           Grid.Column="0"/>

                <!-- Server Status Indicator -->
                <Border Grid.Column="1"
                        Padding="10,5"
                        CornerRadius="5"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsServerUnreachable, Converter={StaticResource BoolToVisibility}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FFFFCCCC"/>
                            <Setter Property="BorderBrush" Value="#FFCC0000"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding ServerStatus}"
                               Foreground="#FFCC0000"
                               FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <!-- State File Preview -->
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,0,0,10">

                <StackPanel>
                    <TextBlock Text="{Binding StateFileTitle}"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBox Height="200"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding StateContent, Mode=OneWay}"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Log File Preview -->
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="15">

                <StackPanel>
                    <TextBlock Text="{Binding LogFileTitle}"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBox Height="200"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding LogContent, Mode=OneWay}"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
