<Window x:Class="EasySave.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasySave.WPF.ViewModels"
        xmlns:views="clr-namespace:EasySave.WPF.Views"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        Height="760"
        Width="1250"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Brush.Background}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:JobsViewModel}">
            <views:JobsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <!-- Sidebar buttons -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Brush.Surface2}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="{DynamicResource Brush.Surface}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,0,1">
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AppTitle}" Style="{StaticResource Text.Title}"/>
                    <TextBlock Text="Backup Manager" Style="{StaticResource Text.Subtitle}" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="FR" Width="44" Margin="6,0" Command="{Binding SetLanguageFrCommand}"/>
                    <Button Content="EN" Width="44" Margin="6,0" Command="{Binding SetLanguageEnCommand}"/>

                    <!-- Theme toggle -->
                    <Button Content="{Binding ThemeToggleText}"
                            Width="70"
                            Margin="10,0,6,0"
                            Command="{Binding ToggleThemeCommand}"/>

                    <Button Content="{Binding ExitText}"
                            Width="80"
                            Margin="6,0"
                            Command="{Binding ExitCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN AREA -->
        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Navigation" Style="{StaticResource Text.Section}" Margin="0,0,0,12"/>

                    <Button Style="{StaticResource NavButton}"
                            Content="{Binding DashboardText}"
                            Command="{Binding NavigateToDashboardCommand}"
                            Margin="0,0,0,6"/>

                    <Button Style="{StaticResource NavButton}"
                            Content="{Binding BackupJobsText}"
                            Command="{Binding NavigateToJobsCommand}"
                            Margin="0,0,0,6"/>

                    <Button Style="{StaticResource NavButton}"
                            Content="{Binding SettingsText}"
                            Command="{Binding NavigateToSettingsCommand}"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
