<Application x:Class="EasySave.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:EasySave.WPF.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>


                <ResourceDictionary Source="Resources/Theme/Colors.Light.xaml" />

  
                <ResourceDictionary Source="Resources/Theme/Brushes.xaml" />
                <ResourceDictionary Source="Resources/Theme/Typography.xaml" />
                <ResourceDictionary Source="Resources/Theme/Controls.xaml" />
                <ResourceDictionary Source="Resources/Theme/DataGrid.xaml" />

            </ResourceDictionary.MergedDictionaries>


            <converters:BackupTypeConverter x:Key="BackupTypeConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>