<Window x:Class="EasySave.WPF.Views.BackupProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Backup Progress"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Header row -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid row -->
            <RowDefinition Height="*"/>
            <!-- OK button row -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header text displaying thread count -->
        <TextBlock Grid.Row="0"
                   Text="{Binding HeaderText}"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- Progress DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding JobProgressItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  Margin="0,0,0,15">

            <DataGrid.Columns>
                <!-- Job Name column -->
                <DataGridTextColumn Header="{Binding DataContext.NameColumnHeader, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Binding="{Binding JobName}"
                                    Width="2*"/>

                <!-- Progress column -->
                <DataGridTemplateColumn Header="{Binding DataContext.ProgressColumnHeader, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProgressDisplay}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <!-- Red text if failed -->
                                            <DataTrigger Binding="{Binding IsFailed}" Value="True">
                                                <Setter Property="Foreground" Value="Red"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Emergency Stop button column (non-functional, visual only) -->
                <DataGridTemplateColumn Header="{Binding DataContext.ActionColumnHeader, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DataContext.EmergencyStopText, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Width="100"
                                    Height="25"
                                    Margin="5"
                                    IsEnabled="True"
                                    Background="#FFDD4444"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- OK button (visible only when completed) -->
        <Button Grid.Row="2"
                Content="OK"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand}"
                Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>
