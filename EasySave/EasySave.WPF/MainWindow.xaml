<Window x:Class="EasySave.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.WPF"
        xmlns:vm="clr-namespace:EasySave.WPF.ViewModels"
        xmlns:views="clr-namespace:EasySave.WPF.Views"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- DataTemplates for ViewModel to View mapping -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:JobsViewModel}">
            <views:JobsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- ====== TOP MENU BAR ====== -->
        <DockPanel Background="{StaticResource PrimaryColor}" Grid.Row="0">

            <TextBlock Text="{Binding AppTitle}"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">

                <Button Content="FR"
                        Width="40"
                        Margin="5"
                        Style="{StaticResource TopBarButtonStyle}"
                        Command="{Binding SetLanguageFrCommand}"/>

                <Button Content="EN"
                        Width="40"
                        Margin="5"
                        Style="{StaticResource TopBarButtonStyle}"
                        Command="{Binding SetLanguageEnCommand}"/>

                <Button Content="{Binding ExitText}"
                        Width="60"
                        Margin="5"
                        Style="{StaticResource TopBarButtonStyle}"
                        Command="{Binding ExitCommand}"/>
            </StackPanel>

        </DockPanel>

        <!-- ====== MAIN AREA ====== -->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- SIDE MENU -->
            <StackPanel Background="{StaticResource SecondaryColor}"
                        Grid.Column="0">

                <Button Content="{Binding DashboardText}"
                        Margin="10"
                        Height="40"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding NavigateToDashboardCommand}"/>

                <Button Content="{Binding BackupJobsText}"
                        Margin="10"
                        Height="40"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding NavigateToJobsCommand}"/>

                <Button Content="{Binding SettingsText}"
                        Margin="10"
                        Height="40"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding NavigateToSettingsCommand}"/>
            </StackPanel>

            <!-- CONTENT AREA -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentViewModel}"/>
        </Grid>

    </Grid>
</Window>
