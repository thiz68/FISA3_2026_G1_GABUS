<UserControl x:Class="EasySave.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="20">
        <StackPanel MaxWidth="500" HorizontalAlignment="Left">

            <!-- Settings Title -->
            <TextBlock Text="{Binding GeneralSettingsTitle}"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- Log Format -->
            <TextBlock Text="{Binding LogFormatLabel}"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <ComboBox Height="35"
                      Margin="0,0,0,20"
                      ItemsSource="{Binding LogFormats}"
                      SelectedIndex="{Binding SelectedLogFormatIndex}"/>
            
            <!-- Extensions to Encrypt -->
            <TextBlock Text="{Binding ExtensionsToEncryptLabel}"
                       FontSize="14"
                       Margin="0,0,0,5"/>

            <TextBox Height="35"
                     Margin="0,0,0,20"
                     Text="{Binding ExtensionsToEncrypt, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Business Software -->
            <TextBlock Text="{Binding BusinessSoftwareLabel}"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox Height="35"
                     Margin="0,0,0,20"
                     Text="{Binding BusinessSoftware, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Save Button -->
            <Button Content="{Binding SaveSettingsText}"
                    Width="150"
                    Height="40"
                    HorizontalAlignment="Left"
                    Style="{StaticResource ActionButtonStyle}"
                    Command="{Binding SaveSettingsCommand}"/>

        </StackPanel>
    </Grid>
</UserControl>
