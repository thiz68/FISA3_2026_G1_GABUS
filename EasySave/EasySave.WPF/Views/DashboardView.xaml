<UserControl x:Class="EasySave.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="20">
        <StackPanel>

            <!-- Dashboard Title -->
            <TextBlock Text="{Binding DashboardTitle}"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- State File Preview -->
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,0,0,10">

                <StackPanel>
                    <TextBlock Text="{Binding StateFileTitle}"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBox Height="200"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding StateContent, Mode=OneWay}"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Log File Preview -->
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="15">

                <StackPanel>
                    <TextBlock Text="{Binding LogFileTitle}"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <TextBox Height="200"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding LogContent, Mode=OneWay}"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
